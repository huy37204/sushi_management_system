<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link
      href="https://fonts.bunny.net/css?family=figtree:400,500,600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/branch_home.css" />
    <link rel="stylesheet" href="/css/output.css" />

    <title>Cập nhật thông tin nhân viên</title>
  </head>
  <body class="text-gray-800 font-inter">
    <!--sidenav -->
    <%- include('../partials/company/company_side_nav') %>
    <!-- end sidenav -->

    <main
      class="w-full md:w-[calc(100%-256px)] md:ml-64 bg-gray-200 min-h-screen transition-all main"
    >
      <!-- Navbar -->
      <%- include('../partials/company/company_navbar') %>
      <!-- End Navbar -->

      <!-- Content -->
      <!-- Content -->
      <div class="mx-10 mt-10">
        <div class="text-[30px] font-semibold text-[#374151] mb-5">
          Cập nhật thông tin nhân viên
        </div>

        <!-- Employee Information Form -->
        <div class="bg-white p-6 shadow-md rounded-lg">
          <form id="employee-update-form">
            <!-- Employee ID (Readonly) -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="employee-id"
                  class="block text-gray-700 font-medium mb-2"
                >
                  Mã nhân viên
                </label>
                <input
                  type="text"
                  id="employee-id"
                  name="employee-id"
                  class="block w-full p-2 border rounded-md bg-gray-100 text-gray-500 cursor-not-allowed"
                  value="NV12345"
                  readonly
                />
              </div>

              <!-- Gender -->
              <div>
                <label
                  for="gender"
                  class="block text-gray-700 font-medium mb-2"
                >
                  Giới tính
                </label>
                <select
                  id="gender"
                  name="gender"
                  class="block w-full p-2 border rounded-md focus:outline-none focus:ring focus:ring-indigo-300"
                >
                  <option value="male">Nam</option>
                  <option value="female">Nữ</option>
                  <option value="other">Khác</option>
                </select>
              </div>
            </div>

            <!-- Department, Date of Joining and Date of Resignation -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
              <div>
                <label
                  for="department"
                  class="block text-gray-700 font-medium mb-2"
                >
                  Bộ phận
                </label>
                <select
                  id="department"
                  name="department"
                  class="block w-full p-2 border rounded-md focus:outline-none focus:ring focus:ring-indigo-300"
                >
                  <option value="kitchen">Bếp</option>
                  <option value="reception">Lễ tân</option>
                  <option value="waiter">Phục vụ bàn</option>
                  <option value="cashier">Thu ngân</option>
                  <option value="manager">Quản lý chi nhánh</option>
                </select>
              </div>

              <!-- Date of Birth -->
              <div>
                <label for="dob" class="block text-gray-700 font-medium mb-2">
                  Ngày sinh
                </label>
                <input
                  type="date"
                  id="dob"
                  name="dob"
                  class="block w-full p-2 border rounded-md focus:outline-none focus:ring focus:ring-indigo-300"
                />
              </div>
            </div>

            <!-- Date of Resignation and Date of Birth -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
              <div>
                <label
                  for="date-resignation"
                  class="block text-gray-700 font-medium mb-2"
                >
                  Ngày nghỉ việc
                </label>
                <input
                  type="date"
                  id="date-resignation"
                  name="date-resignation"
                  class="block w-full p-2 border rounded-md focus:outline-none focus:ring focus:ring-indigo-300"
                />
              </div>

              <!-- Date of Joining -->
              <div>
                <label
                  for="date-joining"
                  class="block text-gray-700 font-medium mb-2"
                >
                  Ngày vào làm
                </label>
                <input
                  type="date"
                  id="date-joining"
                  name="date-joining"
                  class="block w-full p-2 border rounded-md focus:outline-none focus:ring focus:ring-indigo-300"
                />
              </div>
            </div>

            <!-- Submit Button -->
            <div class="mt-6 flex justify-center">
              <button
                type="submit"
                class="bg-indigo-600 text-white px-9 py-2 rounded-lg hover:bg-indigo-700"
              >
                Cập nhật
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- End Content -->
    </main>

    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/sidebar.js"></script>
    <script src="/js/popper.js"></script>
    <script>
      //start: Toggle-dropdown
      function toggleDropdown(icon) {
        const dropdown = icon.closest("td").querySelector(".dropdown-content");
        // Toggle visibility of the dropdown
        dropdown.classList.toggle("hidden");
      }
      //end: Toggle-dropdown
      document
        .getElementById("employee-update-form")
        .addEventListener("submit", function (e) {
          e.preventDefault(); // Ngừng hành động mặc định (không gửi form)

          // Lấy thông tin từ form
          const employeeData = {
            employeeId: document.getElementById("employee-id").value,
            gender: document.getElementById("gender").value,
            department: document.getElementById("department").value,
            dateJoining: document.getElementById("date-joining").value,
            dateResignation: document.getElementById("date-resignation").value,
            dob: document.getElementById("dob").value,
          };

          console.log("Thông tin nhân viên đã cập nhật:", employeeData);
          alert("Thông tin nhân viên đã được cập nhật thành công!");
        });
    </script>
  </body>
</html>
