<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .hidden {
        display: none;
      }
    </style>
  </head>

  <body>
    <div
      class="bg-gradient-to-b from-green-900 to-green-300 h-screen flex justify-center items-center"
    >
      <!-- Login Form -->
      <div
        id="login-form"
        class="bg-white/30 backdrop-blur-md p-8 rounded-lg shadow-md max-w-sm w-full"
      >
        <h1 class="text-2xl font-bold text-center text-white mb-6">
          Login Form
        </h1>
        <form action="/login" method="POST" id="login-form">
          <div class="mb-4">
            <label for="username" class="block text-sm text-white mb-2"
              >Enter your username</label
            >
            <input
              type="username"
              id="username"
              name="username"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Username"
              required
            />
          </div>
          <div class="mb-4">
            <label for="password" class="block text-sm text-white mb-2"
              >Enter your password</label
            >
            <input
              type="password"
              id="password"
              name="password"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Password"
              required
            />
          </div>
          <div class="flex items-center justify-between mb-6">
            <label class="flex items-center text-white">
              <input type="checkbox" class="mr-2 rounded" />
              Remember me
            </label>
          </div>
          <button
            type="submit"
            class="w-full bg-green-800 hover:bg-green-900 text-white py-3 rounded-lg font-bold"
          >
            Log In
          </button>
        </form>
        <p class="text-center text-white mt-6">
          Don't have an account?
          <a href="/register" class="font-bold hover:underline">Register</a>
        </p>
      </div>

      <!-- Register Form -->
    </div>
  </body>
</html>
