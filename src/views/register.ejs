<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .hidden {
        display: none;
      }
    </style>
    <script>
      function validateForm(event) {
        const password = document.getElementById("register-password").value;
        const confirmPassword = document.getElementById(
          "register-confirm-password",
        ).value;

        if (password !== confirmPassword) {
          alert("Passwords do not match!");
          event.preventDefault(); // Ngăn chặn gửi form
        }
      }
    </script>
  </head>

  <body>
    <div
      class="bg-gradient-to-b from-green-900 to-green-300 h-screen w-full flex justify-center items-center"
    >
      <!-- Register Form -->
      <div
        id="register-form"
        class="bg-white/30 backdrop-blur-md p-8 rounded-lg shadow-md w-[30%]"
      >
        <h1 class="text-2xl font-bold text-center text-white mb-6">
          Register Form
        </h1>
        <form action="/register" method="POST" onsubmit="validateForm(event)">
          <div class="flex space-x-4">
            <div class="mb-4 w-[50%]">
              <label for="name" class="block text-sm text-white mb-2"
                >Full name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
                placeholder="Name"
                required
              />
            </div>
            <div class="mb-4 w-[50%]">
              <label for="email" class="block text-sm text-white mb-2"
                >Enter your email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
                placeholder="Email"
                required
              />
            </div>
          </div>
          <div class="flex space-x-4">
            <div class="mb-4 w-[50%]">
              <label for="phone_number" class="block text-sm text-white mb-2"
                >Enter phone number</label
              >
              <input
                type="text"
                id="phone_number"
                name="phone_number"
                class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
                placeholder="Phone number"
                pattern="\d{10}"
                title="Phone number must be 10 digits"
                required
              />
            </div>
            <div class="mb-4 w-[50%]">
              <label for="gender" class="block text-sm text-white mb-2"
                >Gender</label
              >
              <select
                id="gender"
                name="gender"
                class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white"
                required
              >
                <option value="" disabled selected>Select your gender</option>
                <option value="Nam" class="text-black">Male</option>
                <option value="Nữ" class="text-black">Female</option>
              </select>
            </div>
          </div>
          <div class="mb-4">
            <label for="username" class="block text-sm text-white mb-2"
              >Enter your username</label
            >
            <input
              type="text"
              id="username"
              name="username"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Username"
              required
            />
          </div>
          <div class="mb-4">
            <label for="register-password" class="block text-sm text-white mb-2"
              >Enter your password</label
            >
            <input
              type="password"
              id="register-password"
              name="password"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Password"
              required
            />
          </div>

          <div class="mb-4">
            <label
              for="register-confirm-password"
              class="block text-sm text-white mb-2"
              >Confirm your password</label
            >
            <input
              type="password"
              id="register-confirm-password"
              name="confirmPassword"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Confirm Password"
              required
            />
          </div>
          <button
            type="submit"
            class="w-full bg-green-800 hover:bg-green-900 text-white py-3 rounded-lg font-bold"
          >
            Register
          </button>
        </form>
        <p class="text-center text-white mt-6">
          Already have an account?
          <a href="/login" class="font-bold hover:underline">Log In</a>
        </p>
      </div>
    </div>
    <script>
      function validateForm(event) {
        const password = document.getElementById("register-password").value;
        const confirmPassword = document.getElementById(
          "register-confirm-password",
        ).value;

        if (password !== confirmPassword) {
          alert("Passwords do not match!");
          event.preventDefault(); // Ngăn chặn gửi form nếu không khớp
        }
      }
    </script>
  </body>
</html>
