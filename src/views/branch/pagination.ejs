<div class="flex justify-center items-center space-x-4 mt-4 mb-4">
  <!-- Previous Button -->
  <% if (currentPage > 1) { %>
  <a href="?pageNum=<%= currentPage - 1 %>">
    <div
      class="bg-[#0879BF] text-white font-bold w-[47px] h-[47px] flex justify-center items-center rounded-md"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 24 24"
        strokeWidth="2.5"
        stroke="currentColor"
        class="h-[50%] w-[50%]"
      >
        <path
          strokeLinecap="round"
          strokeLinejoin="round"
          d="M15.75 19.5 8.25 12l7.5-7.5"
        />
      </svg>
    </div>
  </a>
  <% } else { %>
  <div class="w-[47px] h-[47px]"></div>
  <% } %>

  <!-- Page Numbers -->
  <div class="flex space-x-2">
    <% if (currentPage === 1) { // Trang đầu: hiển thị "1, 2, 3, ... trang cuối"
    for (let i = 1; i <= Math.min(3, totalPages); i++) { %>
    <a href="?pageNum=<%= i %>">
      <div
        class="w-[47px] h-[47px] flex justify-center items-center rounded-md font-bold text-[14px] <%= currentPage === i ? 'bg-[#0879BF] text-white' : 'bg-[#F5F5F5] text-black' %>"
      >
        <%= i %>
      </div>
    </a>
    <% } %>
    <% if (totalPages > 3) { %>
    <div class="flex items-end space-x-2">
      <span class="font-bold text-black">...</span>
      <a href="?pageNum=<%= totalPages %>">
        <div
          class="w-[47px] h-[47px] flex justify-center items-center rounded-md font-bold text-[14px] bg-[#F5F5F5] text-black"
        >
          <%= totalPages %>
        </div>
      </a>
    </div>
    <% }
        } else if (currentPage === totalPages) {
          // Trang cuối: hiển thị "1, ..., trang cuối - 2, trang cuối - 1, trang cuối"
          %>

    <% if (totalPages > 3) { %>
    <div class="flex items-end space-x-2">
      <a href="?pageNum=1">
        <div
          class="w-[47px] h-[47px] flex justify-center items-center rounded-md font-bold text-[14px] bg-[#F5F5F5] text-black"
        >
          1
        </div>
      </a>
      <span class="font-bold text-black">...</span>
    </div>
    <% } %>
    <% for (let i = Math.max(1, totalPages - 2); i <= totalPages; i++) { %>
    <a href="?pageNum=<%= i %>">
      <div
        class="w-[47px] h-[47px] flex justify-center items-center rounded-md font-bold text-[14px] <%= currentPage === i ? 'bg-[#0879BF] text-white' : 'bg-[#F5F5F5] text-black' %>"
      >
        <%= i %>
      </div>
    </a>
    <% } %>
    <% } else {
          // Ở giữa: hiển thị "1, ..., trang hiện tại, ..., trang cuối"
          %>

    <% if (currentPage > 2) { %>
    <div class="flex items-end space-x-2">
      <a href="?pageNum=1">
        <div
          class="w-[47px] h-[47px] flex justify-center items-center rounded-md font-bold text-[14px] bg-[#F5F5F5] text-black"
        >
          1
        </div>
      </a>
      <span class="font-bold text-black">...</span>
    </div>
    <% } %>
    <% for (let i = Math.max(1, currentPage - 1); i <= Math.min(totalPages, currentPage + 1); i++) { %>
    <a href="?pageNum=<%= i %>">
      <div
        class="w-[47px] h-[47px] flex justify-center items-center rounded-md font-bold text-[14px] <%= currentPage === i ? 'bg-[#0879BF] text-white' : 'bg-[#F5F5F5] text-black' %>"
      >
        <%= i %>
      </div>
    </a>
    <% } %>
    <% if (currentPage < totalPages - 1) { %>
    <div class="flex items-end space-x-2">
      <span class="font-bold text-black">...</span>
      <a href="?pageNum=<%= totalPages %>">
        <div
          class="w-[47px] h-[47px] flex justify-center items-center rounded-md font-bold text-[14px] bg-[#F5F5F5] text-black"
        >
          <%= totalPages %>
        </div>
      </a>
    </div>
    <% } %>
    <% } %>
  </div>

  <!-- Next Button -->
  <% if (currentPage < totalPages) { %>
  <a href="?pageNum=<%= currentPage + 1 %>">
    <div
      class="bg-[#0879BF] text-white w-[47px] h-[47px] flex justify-center items-center rounded-md"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 24 24"
        stroke="currentColor"
        strokeWidth="5"
        class="h-[50%] w-[50%]"
      >
        <path
          strokeLinecap="round"
          strokeLinejoin="round"
          d="M8.25 4.5l7.5 7.5-7.5 7.5"
        />
      </svg>
    </div>
  </a>
  <% } else { %>
  <div class="w-[47px] h-[47px]"></div>
  <% } %>
</div>
