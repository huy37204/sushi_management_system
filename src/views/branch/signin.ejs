<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .hidden {
        display: none;
      }
    </style>
  </head>

  <body>
    <%- include('partials/customer/header.ejs') %>
    <div
      class="bg-gradient-to-b from-green-900 to-green-300 h-screen flex justify-center items-center"
    >
      <!-- Login Form -->
      <div
        id="login-form"
        class="bg-white/30 backdrop-blur-md p-8 rounded-lg shadow-md max-w-sm w-full"
      >
        <h1 class="text-2xl font-bold text-center text-white mb-6">
          Login Form
        </h1>
        <form action="#" method="POST">
          <div class="mb-4">
            <label for="email" class="block text-sm text-white mb-2"
              >Enter your email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Email"
              required
            />
          </div>
          <div class="mb-4">
            <label for="password" class="block text-sm text-white mb-2"
              >Enter your password</label
            >
            <input
              type="password"
              id="password"
              name="password"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Password"
              required
            />
          </div>
          <div class="flex items-center justify-between mb-6">
            <label class="flex items-center text-white">
              <input type="checkbox" class="mr-2 rounded" />
              Remember me
            </label>
            <a href="#" class="text-white text-sm hover:underline"
              >Forgot password?</a
            >
          </div>
          <button
            type="submit"
            class="w-full bg-green-800 hover:bg-green-900 text-white py-3 rounded-lg font-bold"
          >
            Log In
          </button>
        </form>
        <p class="text-center text-white mt-6">
          Don't have an account?
          <a
            href="#"
            class="font-bold hover:underline"
            onclick="showRegisterForm()"
            >Register</a
          >
        </p>
      </div>

      <!-- Register Form -->
      <div
        id="register-form"
        class="hidden bg-white/30 backdrop-blur-md p-8 rounded-lg shadow-md max-w-sm w-full"
      >
        <h1 class="text-2xl font-bold text-center text-white mb-6">
          Register Form
        </h1>
        <form action="#" method="POST" onsubmit="validateRegisterForm(event)">
          <div class="mb-4">
            <label for="name" class="block text-sm text-white mb-2"
              >Enter your name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Name"
              required
            />
          </div>
          <div class="mb-4">
            <label for="email" class="block text-sm text-white mb-2"
              >Enter your email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Email"
              required
            />
          </div>
          <div class="mb-4">
            <label for="register-password" class="block text-sm text-white mb-2"
              >Enter your password</label
            >
            <input
              type="password"
              id="register-password"
              name="password"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Password"
              required
            />
          </div>
          <div class="mb-4">
            <label
              for="register-confirm-password"
              class="block text-sm text-white mb-2"
              >Confirm your password</label
            >
            <input
              type="password"
              id="register-confirm-password"
              name="confirmPassword"
              class="w-full p-3 rounded-lg border border-white/50 bg-white/10 text-white placeholder-white"
              placeholder="Confirm Password"
              required
            />
          </div>
          <button
            type="submit"
            class="w-full bg-green-800 hover:bg-green-900 text-white py-3 rounded-lg font-bold"
          >
            Register
          </button>
        </form>
        <p class="text-center text-white mt-6">
          Already have an account?
          <a
            href="#"
            class="font-bold hover:underline"
            onclick="showLoginForm()"
            >Log In</a
          >
        </p>
      </div>
    </div>
    <%- include('partials/customer/footer.ejs') %>
    <%-
    include('partials/customer/float_button.ejs') %>

    <script>
      function showRegisterForm() {
        document.getElementById("login-form").classList.add("hidden");
        document.getElementById("register-form").classList.remove("hidden");
      }

      function showLoginForm() {
        document.getElementById("register-form").classList.add("hidden");
        document.getElementById("login-form").classList.remove("hidden");
      }
      function validateRegisterForm(event) {
        // Ngăn không cho gửi form nếu kiểm tra không đạt
        event.preventDefault();

        // Lấy giá trị từ các trường password và confirm password
        const password = document.getElementById("register-password").value;
        const confirmPassword = document.getElementById(
          "register-confirm-password",
        ).value;

        // Kiểm tra nếu không khớp
        if (password !== confirmPassword) {
          alert("Passwords do not match! Please try again.");
        } else {
          // Nếu khớp, form được gửi
          alert("Registration successful!");
          event.target.submit();
        }
      }
    </script>
  </body>
</html>
