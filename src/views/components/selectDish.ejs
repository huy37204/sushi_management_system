<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cửa hàng - Dola Sushi - Sushi Restaurant</title>
    <link rel="stylesheet" href="css/main.css" />
    <link rel="stylesheet" href="css/output.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Akaya+Kanadaka&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div id="menu-items">
      <!-- Hiển thị tất cả món ăn mặc định -->
      <div class="menu-category all">
        <div class="grid grid-cols-4 gap-6">
          <% Object.keys(menuData).forEach(category=> { %> <%
          menuData[category].forEach(dish=> { %>
          <div class="dish-card border rounded-lg p-4 text-center bg-white">
            <img
              src="<%= dish.imageUrl %>"
              alt="<%= dish.name %>"
              class="w-full h-40 object-cover rounded-md mb-4"
            />
            <h3 class="text-lg font-semibold text-gray-800 mb-2">
              <%= dish.name %>
            </h3>
            <p class="text-red-500 text-lg font-bold">
              <%= dish.price.toLocaleString('vi-VN') %>đ
            </p>
            <p class="text-gray-500 text-sm line-through">
              <%= dish.originalPrice.toLocaleString('vi-VN') %>đ
            </p>
            <button class="bg-[#D69C52] text-white px-4 py-2 rounded-lg mt-2">
              Xem chi tiết
            </button>
          </div>
          <% }); %>
          <% }); %>
        </div>
      </div>

      <!-- Các danh mục riêng -->
      <% Object.keys(menuData).forEach(category=> { %>
      <div class="menu-category <%= category %>" style="display: none">
        <div class="grid grid-cols-4 gap-6">
          <% menuData[category].forEach(dish=> { %>
          <div class="dish-card border rounded-lg p-4 text-center bg-white">
            <img
              src="<%= dish.imageUrl %>"
              alt="<%= dish.name %>"
              class="w-full h-40 object-cover rounded-md mb-4"
            />
            <h3 class="text-lg font-semibold text-gray-800 mb-2">
              <%= dish.name %>
            </h3>
            <p class="text-red-500 text-lg font-bold">
              <%= dish.price.toLocaleString('vi-VN') %>đ
            </p>
            <p class="text-gray-500 text-sm line-through">
              <%= dish.originalPrice.toLocaleString('vi-VN') %>đ
            </p>
            <button class="bg-[#D69C52] text-white px-4 py-2 rounded-lg mt-2">
              Xem chi tiết
            </button>
          </div>
          <% }); %>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
