            <div id="item1" class="w-[20%] mb-[40px]">
              <div class="text-[#f5bd74] mb-3">Khai vị</div>
              <div class="pb-2 font-medium">
                <div>Trứng hấp</div>
                <div>Súp miso</div>
                <div>Súp chay</div>
                <div>Trứng cá hồi</div>
              </div>
            </div>
            <div id="item2" class="w-[20%] mb-[40px]">
              <div class="text-[#f5bd74] mb-3">Sashimi combo</div>
              <div class="pb-2 font-medium">
                <div>Sashimi tổng hợp</div>
                <div>Sashimi cá hồi đặc biệt</div>
              </div>
            </div>
            <div id="item3" class="w-[20%] mb-[40px]">
              <div class="text-[#f5bd74] mb-3">Nigiri</div>
              <div class="pb-2 font-medium">
                <div>Cá ngừ</div>
                <div>Cá hồi</div>
                <div>Lườn cá hồi nướng sốt</div>
              </div>
            </div>
            <div id="item4" class="w-[20%] mb-[40px]">
              <div class="text-[#f5bd74] mb-3">Tempura</div>
              <div class="pb-2 font-medium">
                <div>Trứng hấp</div>
                <div>Súp miso</div>
                <div>Súp chay</div>
                <div>Trứng cá hồi</div>
              </div>
            </div>
            <div id="item5" class="w-[20%] mb-[40px]">
              <div class="text-[#f5bd74] mb-3">Udon</div>
              <div class="pb-2 font-medium">
                <div>Trứng hấp</div>
                <div>Súp miso</div>
                <div>Súp chay</div>
                <div>Trứng cá hồi</div>
              </div>
            </div>
            <div id="item6" class="w-[20%] mb-[40px]">
              <div class="text-[#f5bd74] mb-3">Hotpot</div>
              <div class="pb-2 font-medium">
                <div>Trứng hấp</div>
                <div>Súp miso</div>
                <div>Súp chay</div>
                <div>Trứng cá hồi</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <a href="" class="hover:text-[#D69C52] <%= activePage === 'contact' ? 'text-[#D69C52]' : 'text-white'%>">Liên
        hệ</a>
    </div>
    <div class="z-10 ml-[20%] space-x-[15px]">
      <ion-icon name="search-outline" class="pt-2" style="font-size: 22px; font-weight: bold"></ion-icon>
      <a href="cart">
        <ion-icon name="cart-outline" class="pt-2" style="font-size: 22px; font-weight: bold"></ion-icon>
      </a>
      <ion-icon name="person-outline" class="pt-2" style="font-size: 22px; font-weight: bold"></ion-icon>
      <ion-icon name="location-outline" class="pt-2" style="font-size: 22px; font-weight: bold"></ion-icon>
      <button
        class="bg-[#D69C52] hover:bg-[#a17231] text-white py-[6px] px-5 rounded-md -translate-y-1 font-medium transition-colors duration-300"
        onclick="window.location.href='dat-ban'">
        Đặt bàn
      </button>
    </div>
  </nav>

  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
